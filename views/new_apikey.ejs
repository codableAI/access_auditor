<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Create New API Key</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="fade-in">
  <%- include('partials/header') %>
  <div class="container">
    <h2>Create New API Key</h2>
    <% if (error) { %>
      <p style="color:red;"><%= error %></p>
    <% } %>
    <form method="POST" action="/admin/apikeys/new">
      <div class="form-group">
        <label>Scopes (comma-separated):</label>
        <input type="text" name="scopes" placeholder="e.g., read,write">
      </div>
      <div class="form-group">
        <label>Expiration (ISO date, optional):</label>
        <input type="text" name="expiration" placeholder="e.g., 2025-12-31T23:59:59Z">
      </div>
      <div class="form-group">
        <label>Rate Limit (optional):</label>
        <input type="number" name="rateLimit" placeholder="e.g., 100">
      </div>
      <div class="form-group">
        <label>Owner (optional):</label>
        <input type="text" name="owner" placeholder="e.g., user@example.com">
      </div>
      <button type="submit" class="button">Create API Key</button>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
