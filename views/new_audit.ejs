<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Schedule New Audit</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="fade-in">
  <%- include('partials/header') %>
  <div class="container">
    <h2>Schedule New Audit</h2>
    <% if (error) { %>
      <p style="color:red;"><%= error %></p>
    <% } %>
    <form method="POST" action="/admin/audits/new">
      <div class="form-group">
        <label>AI System (optional):</label>
        <input type="text" name="aiSystem">
      </div>
      <div class="form-group">
        <label>Start Date (optional, YYYY-MM-DD):</label>
        <input type="text" name="startDate" placeholder="YYYY-MM-DD">
      </div>
      <div class="form-group">
        <label>End Date (optional, YYYY-MM-DD):</label>
        <input type="text" name="endDate" placeholder="YYYY-MM-DD">
      </div>
      <div class="form-group">
        <label>Scheduled At (required, ISO format):</label>
        <input type="text" name="scheduledAt" placeholder="YYYY-MM-DDTHH:mm:ssZ" required>
      </div>
      <button type="submit" class="button">Schedule Audit</button>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
